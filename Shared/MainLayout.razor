@inherits LayoutComponentBase

@code {
    bool _drawerOpen = false;
    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<MudThemeProvider />
<MudSnackbarProvider />
<MudDialogProvider />

<MudLayout Style="max-width:95vw;max-height:95vh;">
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">ToDo</MudText>
        <MudSpacer />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen"  ClipMode="DrawerClipMode.Always" Elevation="2">
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer Class="m-auto pa-2 " Fixed="true">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
